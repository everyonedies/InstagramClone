@page
@model RegisterModel
@{
    Layout = null;
    ViewBag.Title = "Register - InstagramClone";
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/login.css" type="text/css" rel="stylesheet" />
</head>
<body>
    <div class="form">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <p class="logo-font">InstagramClone</p>
            <div asp-validation-summary="All" style="color: red;" class="validation"></div>
            <div class="form-group">
                <input asp-for="Input.Name" class="form-control" placeholder="Name" />
            </div>
            <div class="form-group">
                <input asp-for="Input.Alias" class="form-control" placeholder="Alias" required pattern="[a-zA-Z0-9-]+" title="Alias must contains only numbers and latin characters."/>
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" class="form-control" placeholder="Password" />
            </div>
            <div class="form-group">
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm password" />
            </div>
            <button type="submit" class="button-style">Register</button>
        </form>
    </div>
    <div class="form" style="margin-top: 15px;">
        <p style="margin: 0; font-size: 14px;">
            <span>Have an account?</span>
            <a asp-area="Identity" asp-page="/Account/Login" title="Register" style="text-decoration: none; color: #3897f0">Log in</a>
        </p>
    </div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</html>
