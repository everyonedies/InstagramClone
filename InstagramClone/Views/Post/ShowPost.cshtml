@model PostViewModel
@{
    ViewData["Title"] = "Profile";
}
@if (Model != null)
{
    <div class="showPost center" style="margin-top: 30px; font-family: Roboto; font-size: 14px;">
        <div id="image-post" style="margin-right: 30px; float: left; max-width: 100%;"><img src="@Model.PictureView" id="img-post" /></div>
        <div style="float: left;">
            <div style="width: 250px; height: auto; min-height: 50px; margin-top: 0px; border-bottom: none;" class="comments" id="post-info">
                <p style="text-align: center; font-size: 20px; font-weight: bold; margin: 0; margin-top: 15px;"><a href="/@Model.User.Alias" style="text-decoration: none; color: black;">@Model.User.Alias</a></p>
                <p style="margin: 0; margin-left: 6px; padding-bottom: 10px; padding-top: 10px;" id="caption-text">@Model.Text</p>
                @if (User.Identity.Name == Model.User.Name)
                {
                    <form id="post-owner-text" method="post" asp-controller="Post" asp-action="AddPostCaption">
                        <input type="hidden" value="@Model.Id" name="post-text-id" id="post-text-id" />
                        <input class="post-input-style" autocomplete="off" required id="post-input-text" name="post-input-text" type="text" placeholder="Type something here..." style="border: none; background-color: white;" />
                        <input type="submit" hidden />
                    </form>
                }
            </div>
            <div id="comments" class="comments" style="width: 250px; min-height: 280px; max-height: 280px; overflow: scroll; overflow-x: hidden;">
                @foreach (var i in Model.Comments)
                {
                    <p class="comment-style"><a href="/@i.User.Alias" style="text-decoration: none; color: black;"><b>@i.User.Alias:</b></a> @i.Text</p>
                }
            </div>
            <div style="width: 250px; height: 50px; margin-top: 0px; border-top: none;" class="comments">
                <p style="margin: 0; padding-top: 15px; margin-left: 6px;">@Model.Likes.Count() likes</p>
            </div>
            <div style="width: 250px; height: 50px; margin-top: 0px; border-top: none;" class="comments">
                <form id="post-comment" method="post" asp-controller="Post" asp-action="AddNewComment">
                    <input type="hidden" value="@Model.Id" name="postId" id="postId"/>
                    <input class="post-input-style" autocomplete="off" required id="comment-input" name="text" type="text" placeholder="Add a comment..." style="border: none; background-color: white; margin-top: 10px;" />
                    <input type="submit" hidden/>
                </form>
            </div>
        </div>
    </div>
}
else
{
    <p>Not found</p>
}
@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/post.js"></script>
}